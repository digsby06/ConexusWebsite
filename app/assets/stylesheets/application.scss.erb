@import "font-awesome";

$border: #E9E9E9;
$conexusblue: #00AFe8;
$conexusgreen: #33CC00;
$dark: #424652;
$white: #FFFFFF;
$light: #9a9da4;
$highlight: #8bc6db;


#mosaic {
  margin-top: -150px;
}


/******************************* Home Page - Capabilities Row */



.row.lob-nav {
	height: 120px;
}

.lob-nav {
  background-color: $conexusgreen;
  width: 100%;
  line-height: 1.2;
}

.lob-nav ul {
  list-style: none;
  display: table;
}

.lob-nav ul li {
  display: table-cell;
  width: 12%;
  margin: 0 1%;
  padding: 7px 0;
  text-align: center;
  line-height: 1.3;
  vertical-align: top;
}

.lob-nav ul li a {
  color: #fff;
  display: block;
  padding-top: 80px;
  position: relative;
}

.lob-nav ul li a.single-line {
  padding-top: 80px;
}

.lob-nav ul li i {
  display: block;
  width: 80px;
  height: 80px;
  background-repeat: no-repeat;
  background-position: top left;
  margin: 0 auto 10px;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -36px;
}

.lob-nav ul li.lob-digital i {
  background-image: url('<%= asset_path("assets/images/icon-digital-activations.png")%>'); }
.lob-nav ul li.lob-programming i {
  background-image: url('<%= asset_path("assets/images/icon-programming.png")%>'); }
.lob-nav ul li.lob-immersive i {
  background-image: url('<%= asset_path("assets/images/icon_immersive.png")%>'); }
.lob-nav ul li.lob-experiential i {
  background-image: url('<%= asset_path("assets/images/icon_experiential.png")%>'); }

.lob-nav ul li:hover {
  background: rgba(0, 0, 0, 0.5);
  cursor: pointer;
}

/******************************* Home Page - Contact Us Section */

#contact-section .container {
  border-top: 1px solid #E1E1E1;
}

#home-contact-section {
  h2 {
    font-size: 55px;
    font-weight: 600;
    margin-top: 0px;
    letter-spacing: .02em;
    margin-bottom: 15px; }
  h3 {
    color: $conexusblue;
    font-size: 35px;
    font-weight: 600;
    letter-spacing: .02em;
    margin-bottom: 0px;
    padding-top: 30px; }
  p {
    font-size: 1.5em;
    margin: -.6em 0; }
}

#contact-email-icon p {
  margin-top: 25px;
  color: $conexusblue;
  font-weight: 600;
}


/******************************* About Us Page */

.about-us {
  h2 {
    font-size: 55px;
    font-weight: 600;
  }
  p {
    font-size: 18px;
    line-height: 40px;
  }
}

#ecologydesc {
  text-shadow: 0 3px 3px rgba(0,0,0,0.7);
}

#ecologydesc p {
color: $white;
font-size: 2rem;
line-height: 2.5rem;
}

#capabilities {
  font-size: 18px;
  text-align: center
}

#capabilities h4,
#capabilities .tile.text time,
.tile.text #capabilities time {
  margin-bottom: 0.5em
}

#capabilities .list {
  overflow: auto
}

#capabilities .list .capability {
  text-align: center;
  color: #999;
  float: left;
  width: 50%;
  display: inline-block;
  text-align: center;
  margin: 0;
}

#capabilities .list .capability a {
  display: block;
  width: 90%;
  margin: 0 auto;
  padding: 15px;
}

#capabilities .list .capability a:hover {
  color: white;
  background-color: $conexusblue !important;
}

#capabilities .list.capability-count-2 .capability {
  width: 50%;
}

#capabilities .list.capability-count-1 .capability {
  width: 100%;
}



/******************************* Capabilities Pages */

.capabilitiesinfo {
    color: $white;
    font-size: 1.3rem;
    line-height: 2rem;
}

/************************************ Media Queries */


@media screen and (-webkit-min-device-pixel-ratio: 1.5), screen and (-moz-min-device-pixel-ratio: 1.5), screen and (min-device-pixel-ratio: 1.5) {
    .lob-nav {
      background-color: $conexusgreen;
      }
}

@media (min-width: 1396px) {
  .lob-nav {
    background-color: $conexusgreen;
    background-position: 15px bottom; }



  }

@media (min-width: 768px) {
  .lob-nav {
    padding-left: 0 !important;
    padding-right: 0 !important; } }

@media (min-width: 992px) {
  .lob-nav ul {
    width: 100%;
    margin: 0; }

     #swipe-nav{
  width: 875px;
  margin-right: auto;
  margin-left: auto;
  }


  }

@media (max-width: 991px) {
  .lob-nav ul {
    width: 100%;
    margin: 0; } }

@media (max-width: 767px) {
  .lob-nav {
    position: relative; }
  #swipe-nav {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch; }
    #swipe-nav ul {
      min-width: 545px;
      padding: 0; }
  .slide-dir {
    position: absolute;
    top: 0;
    height: 100%;
    background-repeat: no-repeat; }
    .slide-dir.slide-left {
      left: 0;
      background-position: 50% 50%;
      background-image: url('<%= asset_path("pagination_prev_white.png")%>'); }
    .slide-dir.slide-right {
      right: 0;
      background-position: 50% 50%;
      background-image: url('<%= asset_path("pagination_next_white.png")%>'); } }
