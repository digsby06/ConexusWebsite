<!-- Scaffolding generated by Casein v5.1.1.5 -->
<div class="row">
	<div class="col-lg-12">
		<%= casein_datetime_select f, f.object, :published_at %>
	</div>
</div>

<div class="row">
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :post_title %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<label>Body</label>
		<%= cktext_area :blog, :entry, :ckeditor => {:height => '800px', :uiColor => '#f1f1f1',:toolbar => 'conexus', :extraAllowedContent => 'iframe[*]'} %>
	</div>
</div>


<br />
<br />
<br />
<br />
<br />
<div class="row">
	<div class="col-lg-6">
		<%= casein_file_field f, f.object, "blog", :hero , { :casein_label => "Hero image (one image only)"}%>
	</div>
	<div class="col-lg-6">
		<label class="control-label" for="blog_hero">Currently loaded image:</label>
		<%= if @blog.hero? then image_tag(@blog.hero, width: '300') else content_tag(:span, "No image yet") end %>
	</div>
</div>

<div class="row">
	<div class="col-lg-6">
		<%= casein_check_box f, f.object, :published, { :casein_label => "Publish on site?"}%>
	</div>
</div>

