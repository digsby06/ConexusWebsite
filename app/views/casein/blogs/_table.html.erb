<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Post title", :post_title %></th>
			<th><%= casein_sort_link "Entry", :entry %></th>
			<th><%= casein_sort_link "Category", :category %></th>
			<th><%= casein_sort_link "Published", :published %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% blogs.each do |blog| %>
		<tr>
			<td><%= casein_table_cell_link blog.post_title, casein_blog_path(blog) %></td>
			<td><%= link_to truncate(strip_tags(blog.entry).html_safe, length: 300), casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.category, casein_blog_path(blog) %></td>
			<td><%= casein_table_cell_link blog.author, casein_blog_path(blog) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_blog_path(blog), :method => :delete, :data => { :confirm => "Are you sure you want to delete this blog?" }) %>
			</td>
		</tr>
	<% end %>
</table>
