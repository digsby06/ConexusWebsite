<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% features.each do |feature| %>
		<tr>
			<td><%= casein_table_cell_link feature.title, casein_feature_path(feature) %></td>
			<td><%= casein_table_cell_link feature.description, casein_feature_path(feature) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_feature_path(feature), :method => :delete, :data => { :confirm => "Are you sure you want to delete this feature?" }) %>
			</td>
		</tr>
	<% end %>
</table>